---
import SkinCare from "@/components/ui/icons/SkinCare.astro";
import Makeup from "@/components/ui/icons/MakeUp.astro";
import Haircare from "@/components/ui/icons/HairCare.astro";
---

<section
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
>
    <div
        class="flex flex-col items-center justify-center gap-y-2 sm:flex-row sm:gap-x-12 sm:gap-y-0 lg:gap-x-24"
    >
        <div class="max-w-5xl px-4 sm:px-6 lg:px-8 mx-auto">
            <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-6">
                <a class="flex flex-col card-container bg-neutral-100" href="#">
                    <div class=" p-4 md:p-5">
                        <div class="flex">
                            <SkinCare width="50px" class="card-icon" />
                            <div class="ms-5">
                                <span class="block text-lg font-bold"
                                    >Skincare</span
                                >
                                <span class="block">
                                    Discover our range of skincare products
                                </span>
                            </div>
                        </div>
                    </div>
                </a>

                <a class="flex flex-col card-container bg-neutral-100" href="#">
                    <div class=" p-4 md:p-5">
                        <div class="flex">
                            <Makeup width="50px" class="card-icon" />
                            <div class="ms-5">
                                <span class="block text-lg font-bold"
                                    >Makeup</span
                                >
                                <span class="block">
                                    Explore our collection of makeup products
                                </span>
                            </div>
                        </div>
                    </div>
                </a>

                <a class="flex flex-col card-container bg-neutral-100" href="#">
                    <div class=" p-4 md:p-5">
                        <div class="flex">
                            <Haircare width="50px" class="card-icon" />
                            <div class="ms-5">
                                <span class="block text-lg font-bold"
                                    >Haircare</span
                                >
                                <span class="block">
                                    Find the best products for your hair
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
<style>
    .card-container {
        display: flex;
        align-items: center; /* Alinea verticalmente el contenido */
        border-radius: 12px; /* Bordes redondeados */
        overflow: hidden; /* Asegura que el contenido no se desborde */
        text-decoration: none; /* Quita el subrayado */
        transition:
            transform 0.6s ease-in-out,
            color 0.6s ease;
        transform-origin: center; /* Escala desde el centro */
    }

    .card-container:hover {
        transform: scale(1.01); /* Efecto de ampliación */
        color: #8467b6; /* Cambia el color del texto */
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1); /* Sombra suave */
    }

    .card-icon {
        align-self: flex-start;
        fill: #000; /* Color inicial del ícono */
        transition: fill 0.6s ease-in-out;
    }

    .card-container:hover .card-icon {
        fill: #8d5fdd; /* Cambia el color del ícono en hover */
    }
</style>
