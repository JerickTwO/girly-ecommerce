---
const { slug, title, description, price, count, publishDate, imageUrl } =
    Astro.props;

interface Props {
    slug: string;
    title: string;
    description: string;
    price: number;
    count: number;
    publishDate: string;
    imageUrl: string;
}
---

<div>
    <div class="container-items">
        <div class="item">
            <figure>
                <img src={"productos/" + imageUrl} alt={description} />
            </figure>
            <div class="info-product">
                <h2>{title}</h2>
                <p class="price">${price}</p>
                <button class="btn-add-cart">COMPRAR</button>
            </div>
        </div>
    </div>
</div>

<style>
    .container-items {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        max-width: 1200px;
        margin: 10px auto;
    }
    .item {
        max-width: 347px;
        border-radius: 10px;
        margin: 10px 0;
        background-color: #ffffff;
    }
    .item:hover {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }
    .item img {
        width: 100%;
        height: 250px;
        object-fit: contain;
        border-radius: 8px 8px 0 0;
        transition: all 0.5s;
    }
    .item figure {
        overflow: hidden;
    }
    .item:hover img {
        transform: scale(1.2);
    }
    .info-product {
        padding: 10px 20px;
        line-height: 2;
        display: flex;
        flex-direction: column;
        gap: 5px;
    }
    .info-product button {
        border: none;
        background: none;
        background-color: #000;
        color: #fff;
        border-radius: 10px;
        padding: 5px 2.5px;
        cursor: pointer;
    }
</style>
